<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programm.lordcoudy.samit.MainActivity">

    <com.programm.lordcoudy.samit.MyDraw
        android:id="@+id/myDraw1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_above="@id/gugl"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/Base.Theme.AppCompat"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/gugl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appl"
        android:layout_alignParentStart="true"
        android:text="@string/AddG" />

    <Button
        android:id="@+id/appl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/oreo"
        android:layout_alignParentStart="true"
        android:text="@string/AddA" />

    <Button
        android:id="@+id/oreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clear"
        android:layout_alignParentStart="true"
        android:text="@string/AddO" />


    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/clr" />

</RelativeLayout>
